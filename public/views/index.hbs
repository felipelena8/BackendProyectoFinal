{{>navbar}}
{{>adminAlert}}
{{#if addCartProduct}}
<div role="alert" class="alert alert-success alert-dismissible fade show">
  <strong>{{addCartProduct}}</strong>
  <button type="button" class="close btn" data-bs-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}
<h1 class="text-center">Productos</h1>
<div>
  <div class="productos">
    {{#if admin}}
    <a href="/admin/addProds">
      <button class="btn btn-info">Agregar productos</button>
    </a>
    {{#each products}}
    <div>
      <div class="card" style="width: 18rem;">
        <img src="{{img}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          <form action="/admin/updateProd/{{_id}}" method="get">
            <button type="submit" class="btnAddToCart btn btn-warning">Editar</button>
          </form>
          <form action="/admin/deleteProd/{{_id}}" method="post">
            <button type="submit" class="btnAddToCart btn btn-danger">Eliminar</button>
          </form>
          <p class="card-text">${{price}}</p>
        </div>
      </div>
    </div>
    {{/each}}
    {{else}}
    {{#each products}}
    <div>
      <form action="/content/cart/{{_id}}" method="post">
        <div class="card" style="width: 18rem;">
          <img src="{{img}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <button type="submit" class="btnAddToCart btn btn-primary">Agregar al carrito</button>
            <p class="card-text">${{price}}</p>
          </div>
        </div>
      </form>
    </div>
    {{/each}}
    {{/if}}
  </div>
</div>